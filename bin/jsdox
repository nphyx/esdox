#!/usr/bin/env node

var jsdox = require('../jsdox').jsdox;

var opts = require('optimist')
  .options('output', {
    alias: 'o',
    default: 'output'
  })
  .options('config', {
    alias: 'c'
  })
  .options('version', {
    alias: 'v'
  })
  .options('help', {
    alias: 'H'
  })
  .options('A', {
    alias: 'All',
    boolean: true
  })
  .options('d', {
    alias: 'debug',
    boolean: true
  })
  .options('templateDir', {
    alias: 't'
  })
  .options('index', {
    alias: 'i'
  })
  .options('index-sort', {
    default: 'standard'
  })
  .options('recursive', {
    alias: 'r'
  })
  .options('respect-recursive', {
    alias: 'rr'
  })
  .argv;

if (opts._) {
  opts.input = opts._;
}

jsdox(opts);
